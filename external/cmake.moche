[Repo]
    Name                                cmake
    VersionMin                          3.6.0
    VersionCheckExecutable              cmake
    VersionCheckArguments               --version
    VersionCheckRegex                   ^cmake version ([0-9]+(\.[0-9]+)*)(-.*)?$
    [Build]
        Command                         cmake-bootstrap
    [Build]
        Command                         make-tool-build
    [Retrieval]
        Name                            path
        [Path]
    [Retrieval]
        Name                            official-release
        Version                         3.6.2
        Branch                          cmake.org
        [Binary]
            BuildBinarySubFolder        bin
            [File]
                {Platform} win-x86
                    Url                 https://cmake.org/files/v3.6/cmake-3.6.2-win32-x86.zip
                    FolderToExtract     cmake-3.6.2-win32-x86
                {Platform} win-x64
                    Url                 https://cmake.org/files/v3.6/cmake-3.6.2-win64-x64.zip
                    FolderToExtract     cmake-3.6.2-win64-x64
                {OS} mac
                    Url                 https://cmake.org/files/v3.6/cmake-3.6.2-Darwin-x86_64.tar.gz
                    FolderToExtract     cmake-3.6.2-Darwin-x86_64
                {Platform} linux-x86
                    Url                 https://cmake.org/files/v3.6/cmake-3.6.2-Linux-i386.tar.gz
                    FolderToExtract     cmake-3.6.2-Linux-i386
                {Platform} linux-x64
                    Url                 https://cmake.org/files/v3.6/cmake-3.6.2-Linux-x86_64.tar.gz
                    FolderToExtract     cmake-3.6.2-Linux-x86_64
    {OS} linux
        [Retrieval]
            Name                        official-source
            Version                     3.6.2
            Branch                      cmake.org
            [Source]
                BuildBinarySubFolder        bin
                [Command]
                    Command             download-archive
                    [Arguments]
                        Url                 https://cmake.org/files/v3.6/cmake-3.6.2.tar.gz
                        Format              Tgz
                        Dest                {SourcePath}
                        FolderToUncompress  cmake-3.6.2
[Tool]
    Name                                cmake
    Repo                                cmake
    Executable                          cmake

[Command]
    Name                                cmake
    Tool                                cmake
    [Invoke]
        BuiltIn                         pushd
        [Arguments]
            Path                        {CmakeBuildPath}
            CmakeBuildPath              {BuildPath}
            Create                      true
    [Invoke]
        CommandLineArguments            "{CmakeSourcePath}" {if {CmakeGenerator} -G "{CmakeGenerator}"} {if {Is64Bits} {if not {CmakeGenerator} -DCMAKE_GENERATOR_PLATFORM=x64} } -DCMAKE_BUILD_TYPE="{Configuration}" {if {CmakeCompiler} -DCMAKE_C_COMPILER="{CmakeCompiler}" -DCMAKE_CXX_COMPILER="{CmakeCompiler}" -DCMAKE_ASM_COMPILER="{CmakeCompiler}"} {Arguments}
        [Arguments]
            Configuration               Release
            CmakeSourcePath             {SourcePath}
            Arguments
    [Invoke]
        BuiltIn                         popd
        
[Command]
    Name                                cmake-build
    Tool                                cmake
    [Invoke]
        CommandLineArguments            --build {CmakeBuildPath} --config {Configuration} {if {CmakeTarget} --target {CmakeTarget} }
        [Arguments]
            Configuration               Release
            CmakeBuildPath              {BuildPath}
        
[Command]
    Name                                cmake-tool-build
    Tool                                cmake
    [Invoke]
        BuiltIn                         pushd
        [Arguments]
            Path                        {CmakeBuildPath}
            CmakeBuildPath              {BuildPath}
            Create                      true
    [Invoke]
        Condition                       Initial
        CommandLineArguments            "{CmakeSourcePath}" {if {Is64Bits} -DCMAKE_GENERATOR_PLATFORM=x64} -DCMAKE_BUILD_TYPE="{Configuration}" -DCMAKE_INSTALL_PREFIX="{CmakeBinaryPath}" {Arguments}
        [Arguments]
            Configuration               Release
            CmakeBinaryPath             {BinaryPath}
            CmakeSourcePath             {SourcePath}
            Arguments
    [Invoke]
        BuiltIn                         popd
    [Invoke]
        CommandLineArguments            --build {CmakeBuildPath} --config {Configuration} --target install
        [Arguments]
            Configuration               Release
            CmakeBuildPath              {BuildPath}

{OS} Linux
[Command]
    Name                                cmake-bootstrap
    [Invoke]
        BuiltIn                         pushd
        [Arguments]
            Path                        {SourcePath}
    [Invoke]
        CommandLineExecutable           bootstrap
    [Invoke]
        BuiltIn                         popd
